<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<%= form_tag(url_for, method: "get", class: 'no-print') do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search Pages" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3" class="no-print"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.content %></td>
        <td class="no-print"><%= link_to 'Show', page %></td>
        <td class="no-print"><%= link_to 'Edit', edit_page_path(page) %></td>
        <td class="no-print"><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, class: 'no-print' %>
